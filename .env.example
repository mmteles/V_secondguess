# Server Configuration
PORT=3000
HOST=localhost
CORS_ORIGIN=*
NODE_ENV=development

# Speech-to-Text Configuration
STT_PROVIDER=google
STT_API_KEY=your_speech_to_text_api_key_here
STT_LANGUAGE=en-US
STT_CONFIDENCE_THRESHOLD=0.7
STT_MAX_DURATION=300

# Text-to-Speech Configuration
TTS_PROVIDER=google
TTS_API_KEY=your_text_to_speech_api_key_here
TTS_DEFAULT_VOICE=en-US-Standard-A
TTS_AUDIO_FORMAT=mp3
TTS_SAMPLE_RATE=22050

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage
MAX_FILE_SIZE=10485760

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16
MAX_RECORDING_DURATION=600
SILENCE_THRESHOLD=0.01
NOISE_REDUCTION=false

# AI Configuration
CONVERSATION_MODEL=gpt-4
SOP_MODEL=gpt-4
MAX_TOKENS=4000
AI_TEMPERATURE=0.7
MAX_ITERATIONS=5

# Export Configuration
DEFAULT_TEMPLATE=standard
MAX_DOCUMENT_SIZE=52428800
WATERMARK_ENABLED=false
WATERMARK_TEXT=Generated by AI Voice SOP Agent
WATERMARK_OPACITY=0.3
WATERMARK_POSITION=bottom-right

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
FILE_LOGGING=false
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
CONSOLE_LOGGING=true
LOG_COLORIZE=true
